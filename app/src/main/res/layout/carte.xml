<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".vue.carte"
    tools:showIn="@layout/activity_carte">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="296dp"
            app:srcCompat="@drawable/carte2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/carte3" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/carte4" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnLaTalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="La Talle" />

        <Button
            android:id="@+id/btnLesClasses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Les Classes" />

        <Button
            android:id="@+id/btnLeTriangle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Le Triangle" />

        <Button
            android:id="@+id/btnLeHangar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Le Hangar" />

        <Button
            android:id="@+id/btnFBrenne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fish Brenne" />

        <Button
            android:id="@+id/btnVFetuque"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vieille Fétuque" />

        <Button
            android:id="@+id/btnLeRocher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Le Rocher" />

        <Button
            android:id="@+id/btnPBassin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Petit Bassin" />

        <Button
            android:id="@+id/btnAerodrome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aérodrome" />

        <Button
            android:id="@+id/btnLacombe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lacombe" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>